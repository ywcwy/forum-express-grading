<h1 class="d-inline">餐廳後台</h1>
<a href='/admin/restaurants' class="d-inline">Restaurants</a> |
<a href='/admin/categories'>Categories</a> |
<a href='/admin/users'>Users</a>

<a href='/admin/restaurants/create'>
  <button type="button" class="btn btn-primary d-block mt-2">New Restaurant</button>
</a>

<br />

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td><a href="/users/{{this.id}}">{{this.name}}</a></td>
      <td>{{this.email}}</td>
      <td>{{#if this.isAdmin}}
        admin
        {{else}}
        user
        {{/if}}
      </td>
      <td>
        <form action="/admin/users/{{this.id}}/toggleAdmin?_method=PUT" method="POST" style="display: inline;">
          <button type="submit" class="btn btn-link">{{#if this.isAdmin}}
            set as user
            {{else}}
            set as admin
            {{/if}}</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>